<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.apache.catalina.springsource" module="com.springsource.org.apache.catalina.springsource"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
        <artifact name="notice" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="javax.annotation" name="com.springsource.javax.annotation" rev="1.0.0" conf="provided->compile"/>
		<dependency org="javax.ejb" name="com.springsource.javax.ejb" rev="3.0.0" conf="provided->compile"/>
		<dependency org="javax.mail" name="com.springsource.javax.mail" rev="1.4.0" conf="compile->compile"/>
		<dependency org="javax.persistence" name="com.springsource.javax.persistence" rev="1.0.0" conf="provided->compile"/>
		<dependency org="javax.servlet" name="com.springsource.javax.servlet" rev="2.5.0" conf="provided->compile"/>
		<dependency org="javax.xml.ws" name="com.springsource.javax.xml.ws" rev="2.1.1" conf="provided->compile"/>
		<dependency org="org.apache.juli.springsource" name="com.springsource.org.apache.juli.extras.springsource" rev="6.0.32.S2-r1673" conf="compile->compile"/>
		<dependency org="org.apache.coyote.springsource" name="com.springsource.org.apache.coyote.springsource" rev="6.0.32.S2-r1673" conf="compile->compile"/>
	</dependencies>

</ivy-module>
