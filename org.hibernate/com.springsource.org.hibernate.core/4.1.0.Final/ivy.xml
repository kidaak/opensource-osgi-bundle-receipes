<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.hibernate" module="com.springsource.org.hibernate.core"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="javax.transaction" name="com.springsource.javax.transaction" rev="1.1.0" conf="provided->compile"/>
		<dependency org="javax.persistence" name="com.springsource.javax.persistence" rev="2.0.0" conf="provided->runtime"/>
		<dependency org="org.jboss" name="com.springsource.org.jboss.jandex" rev="1.0.3.Final" conf="provided->compile"/>
		<dependency org="com.fasterxml" name="com.springsource.com.fasterxml.classmate" rev="0.5.4" conf="provided->compile"/>
		<dependency org="org.antlr" name="com.springsource.antlr" rev="2.7.7" conf="compile->runtime"/>
		<dependency org="org.apache.commons" name="com.springsource.org.apache.commons.collections" rev="3.2.1" conf="compile->runtime"/>
		<dependency org="org.dom4j" name="com.springsource.org.dom4j" rev="1.6.1" conf="compile->runtime"/>
		<dependency org="javax.xml.stream" name="com.springsource.javax.xml.stream" rev="1.0.1" conf="compile->runtime"/>
		<dependency org="org.jboss.javassist" name="com.springsource.javassist" rev="3.15.0.GA" conf="compile->runtime"/>
		<dependency org="org.hibernate.common" name="com.springsource.org.hibernate.annotations.common" rev="4.0.1.Final" conf="compile->runtime"/>
		<dependency org="org.jboss.logging" name="com.springsource.org.jboss.logging" rev="3.1.0.CR2" conf="compile->runtime"/>
		<dependency org="org.apache.ant" name="com.springsource.org.apache.tools.ant" rev="1.8.1" conf="compile->compile" />
		<dependency org="org.slf4j" name="com.springsource.slf4j.nop" rev="1.6.1" conf="provided->compile"/>
		<!-- xmlcommons is 'xml-apis'. original dependency in hibernate 4.0.0.CR7 pom was 1.3.02. our "1.3.3" corresponds to 1.3.03 -->
		<dependency org="org.apache.xmlcommons" name="com.springsource.org.apache.xmlcommons" rev="1.3.3" conf="compile->runtime"/>
	</dependencies>

</ivy-module>
