<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.apache.directory" module="com.springsource.org.apache.directory.server.xdbm"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.server.core.entry" rev="1.5.5" conf="compile->runtime"/>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.server.schema.registries" rev="1.5.5" conf="compile->runtime"/>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.shared.ldap" rev="0.9.15" conf="compile->runtime"/>
	</dependencies>

</ivy-module>
