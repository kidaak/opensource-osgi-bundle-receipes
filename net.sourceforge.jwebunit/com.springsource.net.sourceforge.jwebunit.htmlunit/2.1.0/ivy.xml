<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="net.sourceforge.jwebunit" module="com.springsource.net.sourceforge.jwebunit.htmlunit"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="javax.servlet" name="com.springsource.javax.servlet" rev="2.4.0" conf="compile->runtime"/>
		<dependency org="org.apache.commons" name="com.springsource.org.apache.commons.httpclient" rev="3.1.0" conf="compile->runtime"/>
		<dependency org="org.apache.regexp" name="com.springsource.org.apache.regexp" rev="1.5.0" conf="compile->runtime"/>
		<dependency org="net.sourceforge.htmlunit" name="com.springsource.com.gargoylesoftware.htmlunit" rev="2.4.0" conf="compile->runtime"/>
		<dependency org="net.sourceforge.jwebunit" name="com.springsource.net.sourceforge.jwebunit" rev="2.1.0" conf="compile->runtime"/>
		<dependency org="org.slf4j" name="com.springsource.slf4j.api" rev="1.5.0" conf="compile->runtime"/>
		<dependency org="org.slf4j" name="com.springsource.slf4j.org.apache.log4j" rev="1.5.0" conf="runtime->runtime"/>
	</dependencies>

</ivy-module>
