<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.apache.activemq" module="com.springsource.org.apache.activemq"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
		<artifact name="notice" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="com.thoughtworks.xstream" name="com.springsource.com.thoughtworks.xstream" rev="1.3.1" conf="optional->runtime"/>
		<dependency org="javax.jms" name="com.springsource.javax.jms" rev="1.1.0" conf="provided->runtime"/>
		<dependency org="org.apache.geronimo.specs" name="com.springsource.javax.management.j2ee" rev="1.0.1" conf="provided->runtime"/>
		<dependency org="org.apache.activemq" name="com.springsource.org.apache.activeio" rev="3.1.2" conf="optional->runtime"/>
		<dependency org="org.apache.activemq" name="com.springsource.org.apache.kahadb" rev="5.3.0" conf="compile->runtime"/>
		<dependency org="org.apache.commons" name="com.springsource.org.apache.commons.logging" rev="1.1.1" conf="compile->runtime"/>
		<dependency org="org.apache.commons" name="com.springsource.org.apache.commons.net" rev="2.0.0" conf="optional->runtime"/>
		<dependency org="org.apache.derby" name="com.springsource.org.apache.derby" rev="10.1.3000001.417277" conf="optional->runtime"/>
		<dependency org="org.apache.ant" name="com.springsource.org.apache.tools.ant" rev="1.7.0" conf="optional->compile"/>
		<dependency org="org.codehaus.annogen" name="com.springsource.org.codehaus.annogen" rev="0.1.0" conf="optional->compile"/>
		<dependency org="org.springframework" name="org.springframework.beans" rev="2.5.6.SEC01" conf="optional->runtime"/>
		<dependency org="org.springframework" name="org.springframework.context" rev="2.5.6.SEC01" conf="optional->runtime"/>
		<dependency org="org.springframework" name="org.springframework.core" rev="2.5.6.SEC01" conf="optional->runtime"/>
		<dependency org="org.apache.xbean" name="com.springsource.org.apache.xbean.spring" rev="3.6.0" conf="optional->runtime"/>
		<dependency org="org.apache.xalan" name="com.springsource.org.apache.xalan" rev="2.7.1" conf="optional->compile"/>
	</dependencies>

</ivy-module>
