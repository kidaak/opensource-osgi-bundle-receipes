<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.drools" module="com.springsource.org.drools.compiler"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="com.thoughtworks.xstream" name="com.springsource.com.thoughtworks.xstream" rev="1.2.2" conf="optional->compile"/>
		<dependency org="org.antlr" name="com.springsource.org.antlr" rev="3.0.1" conf="optional->compile"/>
		<dependency org="org.codehaus.janino" name="com.springsource.org.codehaus.janino" rev="2.4.3" conf="compile->compile"/>
		<dependency org="org.drools" name="com.springsource.org.drools" rev="4.0.4" conf="compile->compile"/>
		<dependency org="org.eclipse.jdt" name="com.springsource.org.eclipse.jdt.core.compiler.batch" rev="3.3.0" conf="compile->compile"/>
		<dependency org="org.codehaus.mvel" name="com.springsource.org.mvel" rev="1.2.21" conf="compile->compile"/>
	</dependencies>

</ivy-module>
