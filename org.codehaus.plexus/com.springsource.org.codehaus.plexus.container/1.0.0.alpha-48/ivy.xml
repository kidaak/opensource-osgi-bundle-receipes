<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.codehaus.plexus" module="com.springsource.org.codehaus.plexus.container"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="org.junit" name="com.springsource.junit" rev="3.8.2" conf="optional->compile"/>
		<dependency org="org.apache.xbean" name="com.springsource.org.apache.xbean.recipe" rev="3.4.2" conf="compile->compile"/>
		<dependency org="org.aspectj" name="com.springsource.org.aspectj.runtime" rev="1.5.4" conf="compile->compile"/>
		<dependency org="org.codehaus.classworlds" name="com.springsource.org.codehaus.classworlds" rev="1.0.0" conf="compile->compile"/>
		<dependency org="org.codehaus.plexus" name="com.springsource.org.codehaus.plexus.classworlds" rev="1.2.0.alpha-13" conf="compile->compile"/>
		<dependency org="org.codehaus.plexus" name="com.springsource.org.codehaus.plexus.util" rev="1.5.4" conf="compile->compile"/>
	</dependencies>

</ivy-module>
